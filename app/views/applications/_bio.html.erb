<% if @application.application_status == "In Progress" %>
<%= form_with url: "/applications/#{@application.id}",  method: :patch, local: true do |form| %>
  <%= form.label 'Tell us why you would make a good home for this pet:' %><br/>
  <%= form.text_area :applicant_bio, required: true, :size=>"100", :minlength=>"5", :maxlength=>"250" %>
  <%= form.submit 'Submit Application' %>
<% end %>
<% end %>
