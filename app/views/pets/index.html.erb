<center>
<h1>All pets</h1>

<%= form_with url: "/pets", method: :get, local: true do |f| %>
  <%= f.label :search %>
  <%= f.text_field :search %>
  <%= f.submit "Search" %>
<% end %>

<br/>

<ul>
  <li><%= link_to 'Start an Application', '/applications/new' %></li>
</ul>

<br>
<br>
</center>

<% @pets.each do |pet| %>
  <div id="pet-<%= pet.id %>">
    <row id='pet-index'>
      <column id='pet-image'>
        <%= image_tag "#{pet.image_path}" %>
      </column>
      <column id='pet-info'>
        <h3><%= link_to "#{pet.name}", "/pets/#{pet.id}" %></h3>
        <p>Age: <%= pet.age %></p>
        <p>Breed: <%= pet.breed %></p>
        <p>Adoptable: <%= pet.adoptable %></p>
        <p>You can find <%= pet.name %> at <%= link_to "#{pet.shelter_name}", "/shelters/#{pet.shelter.id}" %>!</p>
        <%= link_to "Edit #{pet.name}", "/pets/#{pet.id}/edit" %>
        <%= link_to "Delete #{pet.name}", "/pets/#{pet.id}", method: :delete %>
      </column>
    </row>
  </div>
<% end %>
